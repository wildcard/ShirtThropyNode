
extends layout
block content
    style
        | .profile-title { text-align:center; margin:20px 0 20px 0;}
        | .profile-image { width:200px; height:200px; background:url('/public/img/Homelessman.jpg');
        |    background-size:cover; margin:auto; margin-bottom:-60px; z-index:1; position:relative; }
        | .profile-description { text-align:left; margin-top:20px; padding-top:20px; line-height: 24px; }
        | .btnDonate { padding:5px 20px; width:100%; font-size:36px; }
        | .profile-progress { font-size:24px; }
        | .profile-title {}

    .container
        h1.profile-title.jumbotron #{fullname}
        div.profile-image.circular
        div.jumbotron
            p.profile-description.  #{description}
            br 
            .progress
                .progress-bar(role="progressbar", aria-valuenow="60", aria-valuemin="0", aria-valuemax="100", style="width: 60%;")
                span.sr-only 60% Complete
            div.profile-progress.lead.text-center #{donation_current}$ / #{donation_target}$
        a.btnDonate.btn.btn-primary(onClick='alert("whoaaa, cool")') Donate